{
  "name": "hello-books",
  "version": "1.0.0",
  "description": "Backend code for hello-books application",
  "main": "index.js",
  "scripts": {
    "start:dev": "set NODE_ENV=development && node  ./server/bin/www --exec babel-node --presets env ",
    "test": "set NODE_ENV=test && nyc mocha server/test/* --timeout 15000 --compilers js:babel-register",
    "initialize:db": "babel-node server/server/scripts/initialize.js",
    "start": "npm run build",
    "build": "webpack -d && copyfiles client/index.html dist/index.html && webpack-dev-server --content-base client/ --inline --hot",
    "build:prod": "webpack -p && cp client/index.html dist/index.html",
    "coverage": "nyc report --reporter=text-lcov | coveralls ",
    "codeclimate:report": "recink run unit -c codeclimate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "jsonwebtoken": "^7.4.2",
    "just.randomstring": "^0.1.1",
    "mocha": "^3.5.0",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.8.2",
    "node-cron": "^1.2.1",
    "node-mocks-http": "^1.6.4",
    "node-schedule": "^1.2.4",
    "nodemailer": "^4.0.1",
    "nodemon": "^1.11.0",
    "nyc": "^11.1.0",
    "pg": "^7.1.0",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.5.10",
    "randomstring": "^1.1.5",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router-dom": "^4.2.2",
    "recink-codeclimate": "^1.5.5",
    "sequelize": "^4.4.2",
    "should": "^11.2.1",
    "supertest": "^3.0.0",
    "validation": "0.0.1",
    "validator": "^8.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-mocha-es6-compiler": "^0.1.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "codeclimate-test-reporter": "^0.5.0",
    "copyfiles": "^1.2.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "istanbul": "^0.4.5",
    "nodemon": "^1.11.0",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
